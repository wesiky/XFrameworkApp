<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary">


    <TextView
        android:id="@+id/tvBatch"
        style="@style/TextStyle.Content"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="start|center_vertical"
        android:text="@string/batch_no"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/tvBatchValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBatchValue"
        style="@style/TextStyle.Content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="start|center_vertical"
        android:singleLine="false"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvLackBody"
        app:layout_constraintStart_toEndOf="@+id/tvBatch"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLackBody"
        style="@style/TextStyle.Content"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="start|center_vertical"
        android:text="@string/btn_delivery"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/tvBatchValue"
        app:layout_constraintEnd_toStartOf="@id/tvLackAttachment"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLackAttachment"
        style="@style/TextStyle.Content"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="start|center_vertical"
        android:text="@string/btn_suspended"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/tvBatchValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>