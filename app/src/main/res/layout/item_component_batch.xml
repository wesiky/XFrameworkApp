<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvBatchNo"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="start|center"
        android:maxLines="1"
        android:text=""
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toStartOf="@+id/tvCountName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCountName"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:gravity="start|center"
        android:maxLines="1"
        android:text="数量"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toStartOf="@+id/etCount"
        app:layout_constraintTop_toTopOf="@id/tvBatchNo" />

    <EditText
        android:id="@+id/etCount"
        android:layout_width="50dp"
        android:layout_height="36dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="number"
        android:maxLines="1"
        android:text=""
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toStartOf="@+id/btnDelete"
        app:layout_constraintTop_toTopOf="@id/tvBatchNo" />

    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="TODO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvBatchNo"
        app:srcCompat="@android:drawable/ic_delete" />

    <TextView
        android:id="@+id/tvComponent"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="start|center"
        android:maxLines="1"
        android:text=""
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBatchNo" />
</androidx.constraintlayout.widget.ConstraintLayout>