<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckActivity">

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/xui_actionbar_height"
        android:background="?attr/colorPrimary"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvReturn"
            style="@style/TextStyle.Title"
            android:textColor="@android:color/white"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:onClick="returnOnClick"
            android:text="@string/btn_return" />

        <TextView
            style="@style/TextStyle.Title"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginEnd="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/title_order_check" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvOrderCode"
        style="@style/TextStyle.Content"
        android:layout_width="80dp"
        android:layout_height="?attr/xui_config_size_edittext_height"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:text="@string/check_order_code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar" />

    <TextView
        android:id="@+id/tvOrderCodeValue"
        style="@style/TextStyle.Content"
        android:layout_width="0dp"
        android:layout_height="?attr/xui_config_size_edittext_height"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical"
        android:text="@string/empty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvOrderCode"
        app:layout_constraintTop_toBottomOf="@id/top_bar" />

    <TextView
        android:id="@+id/tvWarehouse"
        style="@style/TextStyle.Content"
        android:layout_width="80dp"
        android:layout_height="?attr/xui_config_size_edittext_height"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:text="@string/warehouse"
        app:layout_constraintEnd_toEndOf="@id/tvOrderCode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderCode" />

    <TextView
        android:id="@+id/tvWarehouseValue"
        style="@style/TextStyle.Content"
        android:layout_width="0dp"
        android:layout_height="?attr/xui_config_size_edittext_height"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:text="@string/empty"
        app:layout_constraintEnd_toStartOf="@+id/tvCheckDate"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/tvWarehouse"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderCodeValue" />

    <TextView
        android:id="@+id/tvCheckDate"
        style="@style/TextStyle.Content"
        android:layout_width="80dp"
        android:layout_height="?attr/xui_config_size_edittext_height"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:text="@string/check_date"
        app:layout_constraintEnd_toStartOf="@+id/tvCheckDateValue"
        app:layout_constraintStart_toEndOf="@+id/tvWarehouseValue"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderCodeValue" />

    <TextView
        android:id="@+id/tvCheckDateValue"
        style="@style/TextStyle.Content"
        android:layout_width="0dp"
        android:layout_height="?attr/xui_config_size_edittext_height"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical"
        android:text="@string/empty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/tvCheckDate"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderCodeValue" />

    <TextView
        android:id="@+id/tvAllocationTitle"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="@string/allocation"
        app:layout_constraintEnd_toStartOf="@id/tvProductNameTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvWarehouse" />

    <TextView
        android:id="@+id/tvProductNameTitle"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical"
        android:text="@string/status"
        app:layout_constraintEnd_toStartOf="@+id/tvScanCountTitle"
        app:layout_constraintStart_toEndOf="@id/tvAllocationTitle"
        app:layout_constraintTop_toBottomOf="@id/tvWarehouseValue" />

    <TextView
        android:id="@+id/tvScanCountTitle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical"
        android:text="操作"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCheckDateValue" />

    <ListView
        android:id="@+id/lvAllocation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAllocationTitle">

    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>